<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lroxima.body_health.bodyhealth.EntryActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Weight"
        android:inputType="numberDecimal"
        android:layout_marginLeft="73dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/metric"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Metric"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintLeft_toRightOf="@+id/editWeight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editBmi"
        android:hint="BMI"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginLeft="73dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editBone" />

    <TextView
        android:id="@+id/textViewBmi"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:text="BMI"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/editBmi"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.14"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewBone" />


    <EditText
        android:id="@+id/editBodyFat"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Body Fat"
        app:layout_constraintRight_toLeftOf="@+id/textViewBodyFat"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.783"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editWeight" />

    <TextView
        android:id="@+id/textViewBodyFat"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:text="Body Fat %"
        android:layout_marginRight="116dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/metric" />

    <EditText
        android:id="@+id/editWater"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Water"
        android:inputType="numberDecimal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewWater"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.783"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editBodyFat" />

    <TextView
        android:id="@+id/textViewWater"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:text="Water %"
        android:layout_marginRight="116dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewBodyFat" />

    <EditText
        android:id="@+id/editBone"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Bone"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewBone"
        app:layout_constraintTop_toBottomOf="@+id/editWater" />

    <TextView
        android:id="@+id/textViewBone"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:text="Bone %"
        android:layout_marginRight="116dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewWater" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
