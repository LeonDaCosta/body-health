<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lroxima.body_health.bodyhealth.EntryActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/metric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metric"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintLeft_toRightOf="@+id/editWeight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Weight"
        android:inputType="numberDecimal"
         />

    <TextView
        android:id="@+id/textViewBmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BMI"
        app:layout_constraintTop_toBottomOf="@+id/textViewBone"
        />

    <EditText
        android:id="@+id/editBmi"
        android:hint="BMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
         />

    <TextView
        android:id="@+id/textViewBodyFat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Body Fat %"
        app:layout_constraintTop_toBottomOf="@+id/metric"
        />

    <EditText
        android:id="@+id/editBodyFat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Body Fat"
         />

    <TextView
        android:id="@+id/textViewWater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Water %"
        />

    <EditText
        android:id="@+id/editWater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Water"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/textViewBone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bone %"
        />

    <EditText
        android:id="@+id/editBone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Bone"
        android:inputType="numberDecimal"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        />

</LinearLayout>
